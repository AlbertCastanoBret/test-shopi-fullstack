      <h2>{{ block.settings.title }}</h2>
      <p>{{ block.settings.description }}</p>
    </div>
    <img class="featured-products__left-container__image" src="{{ block.settings.background_image | image_url }}" alt="featured product">
  </div>
  <div class="featured-products__right-container">
    <div class="featured-products__right-container__title">
      <h3></h3>
      <span></span>
