{% schema %}
{
  // In the customize, you will find your extension with this name
  "name": "Featured products",
  "target": "section",
  // You must define your settings into this array
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "title", // Use this to access the value in the block.settings object
      "default": "Featured products"
    },
    {
      "type": "text",
      "label": "Description",
      "id": "description",
      "default": "Our top products for this month"
    },
    {
      "type": "image_picker",
      "label": "Background Image",
      "id": "background_image"
    }
  ]
}
{% endschema %}
